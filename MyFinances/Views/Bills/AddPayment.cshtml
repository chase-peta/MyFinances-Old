@model BillHistory

@{
    ViewBag.Title = "Add Bill Payment - " + Model.Bill.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="clear-after">
    <div class="pull-right">
        @Html.ActionLink("Back to Bill", "Edit", new { id = Model.Bill.Id }, new { @class = "btn btn-primary" })
    </div>
    <h2>@ViewBag.Title</h2>
</div>

<hr />

<div class="col-xs-12 col-md-6">
    <h3>Add Bill Payment</h3>

    <div class="update-form">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
    
            <div class="form-horizontal">
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    @Html.LabelFor(model => model.DatePaid, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-8">
                        @Html.EditorFor(model => model.DatePaid)
                        @Html.ValidationMessageFor(model => model.DatePaid)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Amount, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-8">
                        @Html.EditorFor(model => model.Amount)
                        @Html.ValidationMessageFor(model => model.Amount)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Payee, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-8">
                        @Html.EditorFor(model => model.Payee)
                        @Html.ValidationMessageFor(model => model.Payee)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PaymentTypeId, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-8">
                        @Html.EditorFor(model => model.PaymentTypeId)
                        @Html.ValidationMessageFor(model => model.PaymentTypeId)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IssueDate, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-8">
                        @Html.EditorFor(model => model.IssueDate)
                        @Html.ValidationMessageFor(model => model.IssueDate)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-8">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="row">
    <div class="col-xs-12 col-md-6">
        <h3>Recent Payments</h3>

        <table class="table">
            <tr>
                <th>@Html.DisplayNameFor(m => m.Bill.BillHistory.First().DatePaid)</th>
                @if (Model.Bill.HistoryDiffPayee) {
                    <th>@Html.DisplayNameFor(m => m.Bill.BillHistory.First().Payee)</th>
                }
                <th>@Html.DisplayNameFor(m => m.Bill.BillHistory.First().IssueDate)</th>
                <th class="text-right">@Html.DisplayNameFor(m => m.Bill.BillHistory.First().Amount)</th>
            </tr>
        
            @if (Model.Bill.BillHistory != null)
            { 
                int count = 0;
                foreach (var item in Model.Bill.BillHistory) {
                    count += 1;
                    if (count > 12)
                    {
                        break;
                    }
                    <tr>
                        <td>@Html.ActionLink(Html.DisplayFor(m => item.DatePaid).ToString(), "HistoryEdit", new { id = item.Id })</td>
                        @if (Model.Bill.HistoryDiffPayee) {
                            <td>@Html.DisplayFor(m => item.Payee)</td>
                        }
                        <td>@Html.DisplayFor(m => item.IssueDate)</td>
                        <td class="text-right">@Html.DisplayFor(m => item.Amount)</td>
                    </tr>
                }
            }
        </table>
    </div>
</div>