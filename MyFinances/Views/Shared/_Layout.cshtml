<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - My Finances</title>

    <!--Styles-->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />

    <link rel="shortcut icon" href="/content/favicon.ico" type="image/ico">

    <!--Moderizer-->
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    @Html.Action("RenderMenu", "Shared")

    <div id="page-container">
        <main>
            <div class="container-fluid">
                @RenderBody()
            </div>
        </main>
    </div>

    <footer>
        <div class="navbar navbar-inverse">
            <div class="container-fluid">
                <p>&copy; @DateTime.Now.Year - My Finances</p>
            </div>
        </div>
    </footer>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/canvasjs.min.js"></script>
    <script src="~/Scripts/main.js"></script>
</body>
</html>