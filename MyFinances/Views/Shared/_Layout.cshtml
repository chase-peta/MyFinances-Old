<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Finances</title>

    <!--Styles-->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />

    <link rel="shortcut icon" href="/content/favicon.ico" type="image/ico">

    <!--Moderizer-->
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="container-fluid">
        <header class="clear-after">
            <div class="navbar navbar-inverse">
                @Html.ActionLink("My Finances", "Index", "Home", null, new { @class = "navbar-brand" })
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse navbar-right">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Bills", "Index", "Bills")</li>
                        <li>@Html.ActionLink("Loans", "Index", "Loans")</li>
                    </ul>
                </div>
            </div>
        </header>
    </div>

    <div class="container-fluid body-content">
        @RenderBody()
    </div>

    <div class="container-fluid">
        <footer>
            <hr />
            <p>&copy; @DateTime.Now.Year - My Finances</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/canvasjs.min.js"></script>
    <script src="~/Scripts/main.js"></script>
</body>
</html>