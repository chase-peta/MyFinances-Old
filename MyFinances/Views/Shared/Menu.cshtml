<header>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("My Finances", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Home", "Index", "Home", null, new { })</li>
                    <li>@Html.ActionLink("History", "Index", "History")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Bills <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("View All Bills", "Index", "Bills")</li>
                            <li role="separator" class="divider"></li>
                            @foreach (Bill bill in ViewBag.bills)
                            {
                                <li>@Html.ActionLink(Html.DisplayFor(m => bill.Name).ToString(), "View", "Bills", new { id = bill.Id }, null)</li>
                            }
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Loans <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("View All Loans", "Index", "Loans")</li>
                            <li role="separator" class="divider"></li>
                            @foreach (Loan loan in ViewBag.loans)
                            {
                                <li>@Html.ActionLink(Html.DisplayFor(m => loan.Name).ToString(), "View", "Loans", new { id = loan.Id }, null)</li>
                            }
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>