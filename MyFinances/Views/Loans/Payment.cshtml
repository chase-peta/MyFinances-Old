@model LoanHistory

@{
    ViewBag.Title = ViewBag.Action + " - " + Model.Loan.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="clear-after">
    <div class="pull-right">
        @Html.ActionLink("Back to Loan", "View", new { id = Model.Loan.Id }, new { @class = "btn btn-danger" })
    </div>
    <h1>@ViewBag.Title</h1>
</div>

<div class="row">
    <div class="col-xs-12 col-md-4">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-12">
                <div class="update-form">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.Id)
                        <input type="hidden" name="loanPaymentId" id="loanPaymentId" value="@Model.Id" />

                        <div class="row">
                            <div class="form-group col-xs-12 col-lg-6">
                                @Html.LabelFor(model => model.DatePaid, new { @class = "control-label" })
                                @Html.EditorFor(model => model.DatePaid, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.DatePaid)
                            </div>

                            <div class="form-group col-xs-12 col-lg-6">
                                @Html.LabelFor(model => model.Interest, new { @class = "control-label" })
                                @Html.EditorFor(model => model.Interest, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Interest)
                            </div>
                            <div class="clearfix"></div>

                            <div class="form-group col-xs-12 col-lg-6">
                                @Html.LabelFor(model => model.Escrow, new { @class = "control-label" })
                                @Html.EditorFor(model => model.Escrow, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Escrow)
                            </div>

                            <div class="form-group col-xs-12 col-lg-6">
                                @Html.LabelFor(model => model.BasicPayment, new { @class = "control-label" })
                                @Html.EditorFor(model => model.BasicPayment, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.BasicPayment)
                            </div>
                            <div class="clearfix"></div>

                            <div class="form-group col-xs-12 col-lg-6">
                                @Html.LabelFor(model => model.AddPayment, new { @class = "control-label" })
                                @Html.EditorFor(model => model.AddPayment, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.AddPayment)
                            </div>

                            <div class="form-group col-xs-12 col-lg-6">
                                @Html.LabelFor(model => model.PaymentTypeId, new { @class = "control-label" })
                                @Html.EditorFor(model => model.PaymentTypeId, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.PaymentTypeId)
                            </div>
                            <div class="clearfix"></div>

                            <div class="form-group text-center col-xs-12">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </div>
                    }
                </div>
            </div>

            @Html.Partial("_PaymentInfo", Model.Loan)
        </div>
    </div>

    <div class="cols-xs-12 col-md-8">
        @Html.Partial("_HistoryOutlook", Model.Loan)
    </div>
</div>
