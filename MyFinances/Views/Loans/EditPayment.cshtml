@model LoanHistory

@{
    ViewBag.Title = "Add Loan Payment - " + Model.Loan.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="clear-after">
    <div class="pull-right">
        @Html.ActionLink("Back to Loan", "Edit", new { id = Model.Loan.Id }, new { @class = "btn btn-primary" })
    </div>
    <h2>@ViewBag.Title</h2>
</div>

<hr />

<div class="row">
    <div class="col-xs-12 col-md-6">
        <h3>Add Loan Payment</h3>

        <div class="update-form">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
    
                <div class="form-horizontal">
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">
                        @Html.LabelFor(model => model.DatePaid, new { @class = "control-label col-sm-4" })
                        <div class="col-sm-8">
                            @Html.EditorFor(model => model.DatePaid)
                            @Html.ValidationMessageFor(model => model.DatePaid)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.BasicPayment, new { @class = "control-label col-sm-4" })
                        <div class="col-sm-8">
                            @Html.EditorFor(model => model.BasicPayment)
                            @Html.ValidationMessageFor(model => model.BasicPayment)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.AddPayment, new { @class = "control-label col-sm-4" })
                        <div class="col-sm-8">
                            @Html.EditorFor(model => model.AddPayment)
                            @Html.ValidationMessageFor(model => model.AddPayment)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Interest, new { @class = "control-label col-sm-4" })
                        <div class="col-sm-8">
                            @Html.EditorFor(model => model.Interest)
                            @Html.ValidationMessageFor(model => model.Interest)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Escrow, new { @class = "control-label col-sm-4" })
                        <div class="col-sm-8">
                            @Html.EditorFor(model => model.Escrow)
                            @Html.ValidationMessageFor(model => model.Escrow)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.PaymentTypeId, new { @class = "control-label col-sm-4" })
                        <div class="col-sm-8">
                            @Html.EditorFor(model => model.PaymentTypeId)
                            @Html.ValidationMessageFor(model => model.PaymentTypeId)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-8">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="cols-xs-12 col-md-6">
        <div id="LoanPaymentHelper">
            <table class="table">
                <tr>
                    <td>Current Balance</td>
                    <td class="text-right"><strong><span id="currentPrincipal">@Html.DisplayFor(m => Model.Loan.Principal)</span></strong></td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td>Base Payemnt</td>
                    <td class="text-right"><strong><span id="basePaymentHelper">@Html.DisplayFor(m => Model.BasicPayment)</span></strong></td>
                </tr>
                <tr>
                    <td>Additional Payemnt</td>
                    <td class="text-right"><strong><span id="addPaymentHelper">@Html.DisplayFor(m => Model.AddPayment)</span></strong></td>
                </tr>
                <tr>
                    <td>Total</td>
                    <td class="text-right"><strong><span id="totalPayment">Loading</span></strong></td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td>New Balance</td>
                    <td class="text-right"><strong><span id="newPrincipal">Loading</span></strong></td>
                </tr>
            </table>
        </div>
    </div>
</div>